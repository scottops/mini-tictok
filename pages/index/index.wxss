/**app.wxss**/
page{
  height: 100%;
  background-color:black;
}
.cover_pane{
   display: flex;
   position: fixed;
   flex-direction: column;
   bottom: 40px;
   right: 0px; 
   height: 400px;
   width: 80px;
   align-items: center;
}
.user{
  width: 60px;
  height: 60px;
}
 

.user cover-image{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4px solid white;
}
.it{
  margin-top: 10px;
  width: 60px;
  height: 60px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.it cover-image{
  width: 40px;
  height: 40px;
}
.it cover-view{
  color: white;
} 
 
swiper-item {
  overflow: scroll;
  height: 100%;
  -webkit-overflow-scrolling: touch;
}